{
    "name": "__MSG_appName__",
    "version": "0.0.26",
    "manifest_version": 2,
    "update_url": "http://clients2.google.com/service/update2/crx",
    "description": "__MSG_appDescription__",
    "icons": {
        "16": "images/icon-enabled-16.png",
        "128": "images/icon-enabled-128.png"
    },
    "default_locale": "en",
    "background": {
        "scripts": [
            "scripts/chromereload.js",
            "scripts/background.js"
        ]
    },
    "page_action": {
        "default_icon": {
            "19": "images/icon-enabled-19.png",
            "38": "images/icon-enabled-38.png"
        },
        "default_title": "AlwaysSmileAmazon"
    },
    "permissions": [
        "tabs",
        "webRequest",
        "webRequestBlocking",
        "*://*.amazon.com/"
    ]
}